{
  "compilerOptions": {
    "target": "ES5",
    "module": "ESNext",
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@demo/*": [
        "src/pages/demo/*"
      ],
      "@page-demo/*": [
        "src/pages/page-demo/*"
      ]
    }
  },
  "editor.quickSuggestions": {
    "other": true,
    "comments": false,
    "strings": true
  },
  "exclude": [
    "node_modules"
  ]
}